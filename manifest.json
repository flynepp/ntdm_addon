{
  "manifest_version": 3,
  "name": "视频网站标签状态记录",
  "version": "1.0.0",
  "description": "记录视频网站的标签状态，页面刷新后自动恢复",
  
  "permissions": [
    "storage"
  ],
  
  "host_permissions": [
    "https://www.ntdm8.com/*"
  ],
  
  "background": {
    "service_worker": "src/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.ntdm8.com/*"],
      "js": [
        "src/utils.js",
        "src/state-manager.js",
        "src/dom-handler.js",
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
